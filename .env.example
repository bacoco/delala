# SNCF API Configuration
# Get your API key from: https://numerique.sncf.com/startup/api/

# Option 1: Official SNCF API
SNCF_API_KEY=your_api_key_here
SNCF_API_URL=https://api.sncf.com/v1/coverage/sncf

# Option 2: Open Data SNCF
# https://ressources.data.sncf.com/
SNCF_OPEN_DATA_KEY=your_open_data_key_here

# Option 3: Navitia.io (recommended for real-time data)
# https://www.navitia.io/
NAVITIA_API_KEY=your_navitia_key_here
NAVITIA_API_URL=https://api.navitia.io/v1

# Application settings
NEXT_PUBLIC_USE_MOCK_DATA=true  # Set to false when you have API keys
NEXT_PUBLIC_APP_ENV=development